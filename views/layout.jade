doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/bootstrap/dist/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script(src='/bootstrap/dist/js/bootstrap.min.js')
    link(rel='stylesheet', href='/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href="https://fonts.googleapis.com/css?family=Fira+Sans:300, 400, 800" type='text/css')
    if ENV_DEVELOPMENT
      script(src='http://localhost:35729/livereload.js')

  body
    block navigation
      nav.navbar.navbar-default
        div.container-fluid.navbar-content
          link(href="/stylesheets/tabzilla.css" rel="stylesheet")
          div#tabzilla
            a(href="https://www.mozilla.org/") mozilla
          div.navbar-header
            a.navbar-brand-link.navbar-brand(href='#')
              img.nav-logo#moz-logo(src='/images/logo.png' alt='logo' width='260px' height='65px')
          div.collapse.navbar-collapse
    
    block content

    block footer
      footer.footer
        div.footer-image
          img.footer-design(src="/images/footer.png" with="200px" height="205px")
        div.footer-background
          div.footer-text
            div.row
              div.col-xs-5.footer-content
                ul.footer-list
                  li: img#moz-footer-logo(src='/images/moz-logo.png' alt="mozilla")
                  li Terms of Service
                  li Privacy Policy
                  li Code of Conduct
                  li Report a Bug
                  li Creative Commons Attribution 4.0 International License
              div.col-xs-2.footer-content.social-media
                ul.footer-list
                  li: h5 KEEP IN TOUCH
                  li
                    a(href="http://forum.mozillascience.org/") 
                      span.fa.fa-comments
                      span Forum
                  li
                    a(href="http://twitter.com/MozillaScience")
                      span.fa.fa-twitter
                      span @MozillaScience
                  li 
                    a(href="https://wiki.mozilla.org/ScienceLab/Calls")
                      span.fa.fa-phone
                      span Community Call
                  li 
                    a(href="https://www.mozillascience.org/feed")
                      span.fa.fa-rss
                      span RSS Feed
                  li 
                    a(href="irc://irc.mozilla.org/sciencelab")
                      b irc
                      span #ScienceLab
              div.col-xs-3.footer-content.subscribe-footer
                h5 MAILING LIST
                p.small-text Occasional e-mail updates & news
                form.form-inline.footer-form(action="https://mail.mozilla.org/subscribe/mozillascience" method="POST")
                  input.form-control.footer-signup(placeholder="Sign up with your e-mail" name="email")
                  button.pure-button.pure-button-primary(type="submit")
                    i.fa.fa-caret-right
            div.row
              h3.footer-header
                ul.footer-list.footer-links
                  li: a(href="#") Home
                  li.spacer
                  li: a(href="#") About
                  li.spacer
                  li: a(href="#") Blog
                  li.spacer
                  li: a(href="#") Training
                  li.spacer
                  li: a(href="#") Community
                  li.spacer
                  li: a(href="#") Collaborate

    block js
      script(src="/javascripts/hello.js")
